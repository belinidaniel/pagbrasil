<aura:component implements="lightning:availableForFlowActions">

    <aura:attribute name="title" type="String" />
    <aura:attribute name="message" type="String" />
    <aura:attribute name="type" type="String" default="success" />
    <aura:attribute name="mode" type="String" default="dismissible" />
    <aura:attribute name="duration" type="String" />
    <aura:attribute name="key" type="String" />

    <lightning:notificationsLibrary aura:id="notifLib" />

    <aura:handler name="init" value="{!this}" action="{!c.invoke}" />
</aura:component>