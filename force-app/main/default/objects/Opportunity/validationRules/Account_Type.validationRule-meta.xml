<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_Type</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Account.Type, &quot;&quot;), ISPICKVAL(StageName, &quot;Negotiation&quot;))</errorConditionFormula>
    <errorMessage>It is not possible to change the stage to Negotiation, as the Type field in Account is empty.</errorMessage>
</ValidationRule>
