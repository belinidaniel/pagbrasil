                <tr><td>Company Details</td><td>{!form.companyDetails}</td></tr>
                <tr><td>Contact Information</td><td>{!form.contactInformation}</td></tr>
                <tr><td>Requirement Response Time</td><td>{!form.requirementResponseTime}</td></tr>
                <tr><td>Requirement Price Format</td><td>{!form.requirementPriceFormat}</td></tr>
                <tr><td>Delivery Time</td><td>{!form.deliveryTime}</td></tr>
                <tr><td>Shipping Proof</td><td>{!form.shippingProofPod}</td></tr>
                <tr><td>Customs Fee</td><td>{!form.customsFee}</td></tr>
                <tr><td>Requirement Zip Code Validator</td><td>{!form.requirementZipCodeValidator}</td></tr>
                <tr><td>Requirement Info Validator</td><td>{!form.requirementInfoValidator}</td></tr>
                <tr><td>Minimum Installments</td><td>{!form.minimumInstallmentsForInterest}</td></tr>
