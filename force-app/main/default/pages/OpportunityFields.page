                <tr><td>Shopify Discount</td><td>{!form.shopifyDiscount}</td></tr>
                <tr><td>PagBrasil Pix</td><td>{!form.pagBrasilPix}</td></tr>
                <tr><td>Not Interested in Discount</td><td>{!form.notInterestedInOfferingDiscount}</td></tr>
