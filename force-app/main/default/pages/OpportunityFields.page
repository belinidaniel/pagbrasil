                <tr><td>Email Package</td><td>{!form.emailPackage}</td></tr>
                <tr><td>Payment Confirmation Email</td><td>{!form.paymentConfirmationEmailService}</td></tr>
                <tr><td>Payment Link Email</td><td>{!form.paymentLinkEmailService}</td></tr>
                <tr><td>One Click Tokenization</td><td>{!form.oneClickBuyingTokenization}</td></tr>
                <tr><td>Review Payee Registration</td><td>{!form.reviewPayeeRegistration}</td></tr>
                <tr><td>Transaction Type</td><td>{!form.transactionType}</td></tr>
                <tr><td>Emails Pod Manager</td><td>{!form.emailsPodManager}</td></tr>
            </apex:repeat>
        </table>

        <div style="height: 650px; display: block"> </div>
        <!-- Contacts Table -->
        <h2>Contacts</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Type</th>
            </tr>
            <apex:repeat value="{!wrapper.contacts}" var="contact">
                <tr>
                    <td>{!contact.name}</td>
                    <td>{!contact.email}</td>
                    <td>{!contact.phone}</td>
                    <td>{!contact.type}</td>
                </tr>
            </apex:repeat>
        </table>
        <div style="height: 500px; display: block"> </div>
        <!-- contractss Table -->
        <h2>Contracts</h2>
        <table>
            <tr>
                <th>Product Name</th>
                <th>Total Price</th>
                <th>Is Main</th>
                <th>Initial Monthly Revenue</th>
                <th>Final Monthly Revenue</th>
            </tr>
            <apex:repeat value="{!wrapper.contracts}" var="contracts">
                <tr>
                    <td>{!contracts.productName}</td>
                    <td>{!contracts.totalPrice}</td>
                    <td>{!contracts.isMain}</td>
                    <td>{!contracts.initialMonthlyRevenue}</td>
                    <td>{!contracts.finalMonthlyRevenue}</td>
                </tr>
            </apex:repeat>
        </table>
    </body>
    </html>
</apex:page>